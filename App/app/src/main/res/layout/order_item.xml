<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prodotto"
        android:id="@+id/product_name_mylist"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero"
        android:id="@+id/number_item_mylist"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/product_name_mylist"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prezzo totale"
        android:id="@+id/total_price_mylist"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/number_item_mylist"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rimuovi"
        android:id="@+id/remove_item"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/total_price_mylist"
        android:textColor="#DEFF0000"
        android:textSize="15sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/remove_item"/>

</RelativeLayout>