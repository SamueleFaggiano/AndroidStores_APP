<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirm2Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/MenuStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3/3: Ordina!"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:layout_marginStart="25dp"
            android:textSize="20dp"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_realname"
        android:textSize="15sp"
        android:textColor="#000000"
        android:padding="15dp"
        android:text="Nome sul campanello: "
        android:layout_below="@+id/toolbar_confirm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_phone"
        android:textSize="15sp"
        android:textColor="#000000"
        android:padding="15dp"
        android:text="Cellulare: "
        android:layout_below="@+id/user_realname"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_address"
        android:textSize="15sp"
        android:textColor="#000000"
        android:padding="15dp"
        android:text="Indirizzo: "
        android:layout_below="@+id/user_phone"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="CAMBIA INFO"
        android:id="@+id/btn_changeCredentials"
        android:layout_below="@+id/user_address"
        android:layout_alignRight="@+id/btn_done2"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@+id/btn_changeCredentials"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delivery_hour2"
        android:textSize="15sp"
        android:textColor="#000000"
        android:padding="15dp"
        android:text="Ora di consegna: "
        android:layout_below="@id/line"/>

    <Spinner
        android:id="@+id/spinner_hour2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20sp"
        android:layout_below="@+id/delivery_hour2"
        android:layout_marginStart="20sp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="ORDINA SPESA"
        android:id="@+id/btn_done2"
        android:layout_alignBottom="@+id/spinner_hour2"
        android:layout_toRightOf="@+id/spinner_hour2"
        android:layout_toEndOf="@+id/spinner_hour2"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

</RelativeLayout>